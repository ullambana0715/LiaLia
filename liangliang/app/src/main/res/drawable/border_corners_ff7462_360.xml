<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval"
    >

    <!--
    shape的類型含有:
    1.rectangle - 長方形、矩形
    2.oval - 橢圓形、卵形
    3.line - 線
    4.ring - 環形
    -->

    <!-- 圓角，Layout佈局圓角幅度設定值 -->
    <corners
        android:radius="360dip"
        />

    <!-- 框內底部顏色 -->
    <solid
        android:color="#ffffff"
        />

    <!-- 外框，框線粗細，框線顏色 -->
    <stroke
        android:width="5.0dip"
        android:color="#ff7462"
        />


</shape>
